<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.me.healthandfitnesstips.exercise_in_english"
    android:background="@drawable/back2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/linearLayout" />


        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:background="@drawable/back2"
            android:backgroundTint="#dacccccc"
            android:text="ABS"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"

            android:text="BACK"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/btn8"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />


        <Button
            android:id="@+id/btn10"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_below="@+id/btn9"

            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:backgroundTint="#dacccccc"
            android:text="BICEPS"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@+id/imageView3" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/btn10"

            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/imageView4"

            android:layout_toRightOf="@+id/imageView4"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:text="CALF"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn12"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn11"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"

            android:layout_weight="1"
            android:background="#dacccccc"

            android:text="CHEST"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn13"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn12"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:text="FOREARMS"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn14"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn13"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:text="LEGS"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn15"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/btn14"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:text="SHOULDERS"
            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn16"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_below="@+id/btn15"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="#dacccccc"
            android:text="TRICEPS"
            android:textSize="20dp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/abs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/btn9" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/backexer"
            android:layout_alignTop="@+id/btn9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn10" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/biceps"
            android:layout_alignTop="@+id/btn10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/btn11" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/calf"
            android:layout_alignTop="@+id/btn11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn12" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/chest"
            android:layout_alignTop="@+id/btn12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn13" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/forearms"
            android:layout_alignRight="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp"
            android:layout_above="@+id/btn14"
            android:layout_alignTop="@+id/btn13" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/legs"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/btn15"
            android:layout_alignTop="@+id/btn14" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/shoulders"
            android:layout_alignTop="@+id/btn15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6" />


        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="200dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/triceps"
            android:layout_alignTop="@+id/btn16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6" />


    </RelativeLayout>
    </ScrollView>